{
    "compilerOptions": {
        "esModuleInterop": true,
        "moduleResolution": "node",
        "lib": ["ES6", "DOM"],
        "target": "es6",
        "resolveJsonModule": true,
        "types": [
            "node",
            "mocha",
            "../app/index",
            "../app/ArchLogger",
            "../views/preload"
        ],
        "paths": {
            "@Hi/*": ["../Client/ts/*"],
            "@UI/*": ["../views/*"],
            "@Components/*": ["../components/*"],
            "@Triggers/*": ["../triggers/*"],
            "@Resources/*": ["../resources/*"],
            "@Models/*": ["../Models/*"]
        }
    }
}
