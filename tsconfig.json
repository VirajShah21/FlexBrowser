{
    "compilerOptions": {
        "module": "es6",
        "lib": ["esnext", "dom"],
        "rootDir": ".",
        "outDir": "./test/bin",
        "sourceMap": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "noImplicitOverride": true,
        "noImplicitReturns": true,
        "target": "ES2020",
        "resolveJsonModule": true,
        "baseUrl": ".",
        "paths": {
            "@Hi/*": ["./Client/ts/*"],
            "@UI/*": ["./views/*"]
        },
        "strictNullChecks": true,
        "noUncheckedIndexedAccess": true
    },
    "include": ["./**/*.ts"],
    "exclude": ["./node_modules", "./out"]
}
