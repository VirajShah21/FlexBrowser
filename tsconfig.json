{
    "compilerOptions": {
        "module": "es6",
        "lib": ["esnext", "dom"],
        "rootDir": "./",
        "outDir": "./test/bin",
        "sourceMap": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "noImplicitOverride": true,
        "noImplicitReturns": true,
        "target": "es6",
        "resolveJsonModule": true,
        "baseUrl": ".",
        "paths": {
            "@Hi/*": ["./Client/ts/*"],
            "@UI/*": ["./views/*"],
            "@Components/*": ["./components/*"],
            "@Triggers/*": ["./triggers/*"],
            "@Resources/*": ["./resources/*"],
            "@Models/*": ["./Models/*"]
        },
        "strictNullChecks": true,
        "noUncheckedIndexedAccess": true
    },
    "include": ["./**/*.ts"],
    "exclude": ["./node_modules", "./out", "./**/*.spec.ts", "./**/*.mock.ts"]
}
