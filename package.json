{
    "name": "flex-browser",
    "version": "0.0.1",
    "description": "A beautiful cross platform web browser.",
    "main": "app/index.js",
    "scripts": {
        "test": "mocha --reporter spec --recursive",
        "codacy-test": "mocha --reporter mocha-lcov-reporter --recursive > coverage.lcov",
        "start": "electron-forge start",
        "package": "electron-forge package",
        "make": "electron-forge make",
        "publish": "electron-forge publish",
        "quickpack": "webpack; cp -r app/js out/flex-browser-darwin-x64/flex-browser.app/Contents/Resources/app/app"
    },
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "@babel/preset-env": "^7.15.6",
        "@types/chai": "^4.2.22",
        "@types/express": "^4.17.13",
        "@types/node": "^16.3.2",
        "@typescript-eslint/eslint-plugin": "^4.28.3",
        "@typescript-eslint/parser": "^4.28.3",
        "babel-plugin-transform-async-to-generator": "^6.24.1",
        "babel-preset-react": "^6.24.1",
        "chai": "^4.3.4",
        "electron": "^14.0.0",
        "electron-builder": "^22.11.7",
        "electron-squirrel-startup": "^1.0.0",
        "eslint": "^7.32.0",
        "eslint-config-airbnb-base": "^14.2.1",
        "eslint-html-reporter": "^0.7.4",
        "eslint-plugin-import": "^2.24.2",
        "jscover": "^1.0.0",
        "mocha": "^9.1.1",
        "mocha-lcov-reporter": "^1.3.0",
        "node-jscover": "^0.6.13",
        "prettier": "^2.3.2",
        "ts-loader": "^9.2.5",
        "ts-node": "^10.1.0",
        "tsconfig-paths": "^3.10.1",
        "tsconfig-paths-webpack-plugin": "^3.5.1",
        "typedoc": "^0.22.3",
        "typescript": "^4.3.5",
        "typescript-eslint": "0.0.1-alpha.0",
        "webpack": "^5.49.0",
        "webpack-cli": "^4.8.0"
    },
    "dependencies": {
        "@electron-forge/cli": "^6.0.0-beta.61",
        "@electron-forge/maker-deb": "^6.0.0-beta.61",
        "@electron-forge/maker-rpm": "^6.0.0-beta.61",
        "@electron-forge/maker-squirrel": "^6.0.0-beta.61",
        "@electron-forge/maker-zip": "^6.0.0-beta.61",
        "electron": "14.0.0",
        "eslint-config-airbnb-typescript": "^14.0.0"
    },
    "config": {
        "forge": {
            "packagerConfig": {
                "icon": "icon"
            },
            "makers": [
                {
                    "name": "@electron-forge/maker-squirrel",
                    "config": {
                        "name": "my_app"
                    }
                },
                {
                    "name": "@electron-forge/maker-zip",
                    "platforms": [
                        "darwin"
                    ]
                },
                {
                    "name": "@electron-forge/maker-deb",
                    "config": {}
                },
                {
                    "name": "@electron-forge/maker-rpm",
                    "config": {}
                }
            ]
        }
    }
}
