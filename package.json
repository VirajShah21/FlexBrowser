{
    "name": "flex-browser",
    "productName": "Flex Browser",
    "version": "0.0.1",
    "description": "A beautiful cross platform web browser.",
    "main": "app/index.js",
    "build": {
        "appId": "org.virajshah.flex",
        "compression": "maxiumum"
    },
    "scripts": {
        "coverage": "nyc --reporter=lcov --reporter=text-lcov mocha --timeout 10000 -r ts-node-test-register -r tsconfig-paths/register --file test/mocks/Browser.mock.ts \"test/**/*.spec.ts\" --exit",
        "test": "mocha --reporter spec -r ts-node-test-register -r tsconfig-paths/register --file test/mocks/Browser.mock.ts \"test/**/*.spec.ts\" --exit",
        "start": "electron-forge start",
        "package": "electron-forge package",
        "make": "electron-forge make",
        "publish": "electron-forge publish",
        "quickpack": "webpack; cp -r app/js out/Flex\\ Browser-darwin-x64/Flex\\ Browser.app/Contents/Resources/app/app"
    },
    "directories": {
        "test": "test"
    },
    "nyc": {
        "extension": [
            ".ts",
            ".js"
        ],
        "exclude": [
            "**/*.d.ts",
            "test"
        ],
        "reporter": [
            "text-lcov"
        ],
        "all": true
    },
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "@babel/preset-env": "^7.15.6",
        "@types/chai": "^4.2.22",
        "@types/electron": "^1.6.10",
        "@types/express": "^4.17.13",
        "@types/jsdom": "^16.2.13",
        "@types/mocha": "^9.0.0",
        "@types/node": "^16.10.1",
        "@typescript-eslint/eslint-plugin": "^4.28.3",
        "@typescript-eslint/parser": "^4.33.0",
        "babel-plugin-transform-async-to-generator": "^6.24.1",
        "babel-preset-react": "^6.24.1",
        "babel-register": "^6.26.0",
        "chai": "^4.3.4",
        "coveralls": "^3.1.1",
        "electron": "15.0.0",
        "electron-builder": "^22.11.7",
        "electron-squirrel-startup": "^1.0.0",
        "eslint": "^7.32.0",
        "eslint-config-airbnb-base": "^14.2.1",
        "eslint-html-reporter": "^0.7.4",
        "eslint-import-resolver-typescript": "^2.5.0",
        "eslint-plugin-import": "^2.24.2",
        "jscover": "^0.1.1",
        "jsdom": "^18.0.0",
        "mocha": "^9.1.1",
        "mocha-lcov-reporter": "^1.3.0",
        "node-jscover": "^0.6.13",
        "nyc": "^15.1.0",
        "prettier": "^2.3.2",
        "ts-loader": "^9.2.5",
        "ts-node": "^10.1.0",
        "tsconfig-paths": "^3.10.1",
        "tsconfig-paths-webpack-plugin": "^3.5.1",
        "typedoc": "^0.22.3",
        "typescript": "^4.3.5",
        "typescript-eslint": "0.0.1-alpha.0",
        "webpack": "^5.49.0",
        "webpack-cli": "^4.8.0",
        "webpack-node-externals": "^3.0.0"
    },
    "dependencies": {
        "@electron-forge/cli": "^6.0.0-beta.61",
        "@electron-forge/maker-deb": "^6.0.0-beta.61",
        "@electron-forge/maker-rpm": "^6.0.0-beta.61",
        "@electron-forge/maker-squirrel": "^6.0.0-beta.61",
        "@electron-forge/maker-zip": "^6.0.0-beta.61",
        "eslint-config-airbnb-typescript": "^14.0.0",
        "ts-node-test-register": "^10.0.0"
    },
    "config": {
        "forge": {
            "packagerConfig": {
                "icon": "icon"
            },
            "makers": [
                {
                    "name": "@electron-forge/maker-squirrel",
                    "config": {
                        "name": "my_app"
                    }
                },
                {
                    "name": "@electron-forge/maker-zip",
                    "platforms": [
                        "darwin"
                    ]
                },
                {
                    "name": "@electron-forge/maker-deb",
                    "config": {}
                },
                {
                    "name": "@electron-forge/maker-rpm",
                    "config": {}
                }
            ]
        }
    }
}
